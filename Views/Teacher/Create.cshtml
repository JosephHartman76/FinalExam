@page
@model StudentExams.Views.Teacher.CreateModel
@{
}

<h2>Create Teacher</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Teacher.TeacherId">Teacher ID:</label>
        <input asp-for="Teacher.TeacherId" class="form-control" />
        <span asp-validation-for="Teacher.TeacherId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.FirstName">First Name:</label>
        <input asp-for="Teacher.FirstName" class="form-control" />
        <span asp-validation-for="Teacher.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.LastName">Last Name:</label>
        <input asp-for="Teacher.LastName" class="form-control" />
        <span asp-validation-for="Teacher.LastName"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
