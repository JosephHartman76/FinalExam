@page
@model StudentExams.Pages.Teacher.CreateModel
@{
}

<h2>Create Teacher</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="NewTeacher.TeacherId">Teacher ID:</label>
        <input asp-for="NewTeacher.TeacherId" class="form-control" />
        <span asp-validation-for="NewTeacher.TeacherId"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewTeacher.FirstName">First Name:</label>
        <input asp-for="NewTeacher.FirstName" class="form-control" />
        <span asp-validation-for="NewTeacher.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewTeacher.LastName">Last Name:</label>
        <input asp-for="NewTeacher.LastName" class="form-control" />
        <span asp-validation-for="NewTeacher.LastName"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
